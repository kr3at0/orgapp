color-primary-cold = #1f2d3b

.app-menu
    background: color-primary-cold
    height: 100%
    padding-top: 5px;
    box-shadow inset 0 10px 5px -6px darken(color-primary-cold, 50%)

    div
        border-bottom: 3px dashed darken(color-primary-cold, 50%)
        border-top: 1px dashed lighten(color-primary-cold, 5%)

        &:first-of-type
            border-top: none
            a:first-of-type
                border-top: none
    
        &:last-of-type
            border-bottom: none
            a:last-of-type
                border-bottom: none

    a
        color #ccc
        text-decoration: none
        text-shadow 0 -1px 0 darken(color-primary-cold, 30%)
        padding: 10px 15px
        display: block
        border-top: 1px solid darken(color-primary-cold, 50%)
        border-bottom 1px solid lighten(color-primary-cold, 5%)
        transition: padding 0.07s ease-in-out,
            text-shadow 0.2s ease-out
        &:first-of-type
                border-top: none
        &:last-of-type
                border-bottom: none

        &:hover
            color #fff
            text-shadow 0 0 10px #fff,
                0 -1px 0 darken(color-primary-cold, 30%)
            padding-left: 17px
            

